<h1>My Question</h1>

<div class="row">
  <div class="col-md-8">
    <p><%= @question.body %></p>
  </div>
  <div class="col-md-4">
    <% if policy(@question).edit? %>
      <%= link_to "Edit", edit_language_question_path(@language, @question), class: 'btn btn-success' %>
    <% end %>
    <%= link_to "Answer", new_language_question_answer_path(@language, @question), class: 'btn btn-success' %>
  </div>
</div>


<% @question.answers.each do |answer| %>
  <%= simple_format answer.body %>
<% end %>

<h2>Add an Answer</h2>
<%= render "answers/form" %>