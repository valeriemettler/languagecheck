
<div class="wrapper">
  <div class="row">
    <div class="col-md-8">
      <%= link_to "Ask a New Question", new_question_path, class: 'btn btn-success' %>
      <div>
        <h3>My Answered Questions</h3>
        <% if @answered_questions.blank? %>
        <small>You don't have any answers yet.</small>
        <% end %>
        <%= render @answered_questions %>
      </div>
      <div>
        <h3>My Unanswered Questions</h3>
        <% if @unanswered_questions.blank? %>
        <small>You don't have any unanswered questions.</small>
        <% end %>
        <%= render @unanswered_questions %>
      </div>
      <div>
        <h3>Questions I Answered</h3>
        <% if @questions_i_answered.blank? %>
        <small>You haven't answered any questions yet</small>
        <% end %>
        <%= render @questions_i_answered %>
      </div>
    </div>
  </div>
</div>
